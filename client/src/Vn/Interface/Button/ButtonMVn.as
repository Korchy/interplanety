package Vn.Interface.Button {
//-----------------------------------------------------------------------------------------------------
// Кнопка включения/выключения режима
//-----------------------------------------------------------------------------------------------------
	import flash.events.MouseEvent;
	import Vn.Interface.Button.ButtonVn;
//-----------------------------------------------------------------------------------------------------
	public class ButtonMVn extends ButtonVn {
//-----------------------------------------------------------------------------------------------------
// Переменные
//-----------------------------------------------------------------------------------------------------
		private var lPressed:Boolean;	// true - нажата, false - нет
//-----------------------------------------------------------------------------------------------------
// Конструктор
//-----------------------------------------------------------------------------------------------------
		public function ButtonMVn() {
			// Конструктор предка
			super();
			// Конструктор
			lPressed = false;
		}
//-----------------------------------------------------------------------------------------------------
// Деструктор - вызывать самому, автоматически не вызывается
//-----------------------------------------------------------------------------------------------------
		override public function _delete():void {
			// Деструктор
			
			// Деструктор предка
			super._delete();
		}
//-----------------------------------------------------------------------------------------------------
// Функции
//-----------------------------------------------------------------------------------------------------
		
//-----------------------------------------------------------------------------------------------------
		override protected function OnClick(e:MouseEvent):void {
			// Щелчок мышкой
			if (lPressed == true) {
				// Снять нажатие
				ShowFrame(0);
				lPressed = false;
			}
			else {
				// Нажатие
				ShowFrame(1);
				lPressed = true;
			}
		}
//-----------------------------------------------------------------------------------------------------
		public function Reset():void {
			// Сброс состояния кнопки в ненажатое
			if (lPressed == true) OnClick(null);
		}
//-----------------------------------------------------------------------------------------------------
// Обработка событий
//-----------------------------------------------------------------------------------------------------
		
//-----------------------------------------------------------------------------------------------------
// Методы get/set для установки значений переменных
//-----------------------------------------------------------------------------------------------------
		public function get Pressed():Boolean {
			// Режим нажатия
			return lPressed;
		}
//-----------------------------------------------------------------------------------------------------
	}
}