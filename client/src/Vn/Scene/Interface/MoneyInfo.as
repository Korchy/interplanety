package Vn.Scene.Interface {
	// Класс MoneyInfo - Счетчик денег пользователя
//-----------------------------------------------------------------------------------------------------
	import flash.events.Event;
	import Vn.Interplanety;
	import Vn.User.User;
	import Vn.Interface.Text.VnTextI;
//-----------------------------------------------------------------------------------------------------
	public class MoneyInfo extends VnTextI {
//-----------------------------------------------------------------------------------------------------
// Переменные
//-----------------------------------------------------------------------------------------------------
		
//-----------------------------------------------------------------------------------------------------
// Конструктор
//-----------------------------------------------------------------------------------------------------
		public function MoneyInfo() {
			// Конструктор предка
			super(150,20);
			// Конструктор
			Name = 46;
			TextColor = 0xF8D830;
			ReLoadById(29);		// gold
			Vn.Interplanety.VnUser.addEventListener(User.GOLD_CHANGED,ChangeCount);
		}
//-----------------------------------------------------------------------------------------------------
// Деструктор - вызывать самому, автоматически не вызывается
//-----------------------------------------------------------------------------------------------------
		override public function _delete():void {
			// Деструктор
			Vn.Interplanety.VnUser.removeEventListener(User.GOLD_CHANGED,ChangeCount);
			// Деструктор предка
			super._delete();
		}
//-----------------------------------------------------------------------------------------------------
// Функции
//-----------------------------------------------------------------------------------------------------
		
//-----------------------------------------------------------------------------------------------------
// Обработка событий
//-----------------------------------------------------------------------------------------------------
		private function ChangeCount(e:Event):void {
			// Обновить данные
			Text = e.target.MoneyCount;
		}
//-----------------------------------------------------------------------------------------------------
// Методы get/set для установки значений переменных
//-----------------------------------------------------------------------------------------------------
		
//-----------------------------------------------------------------------------------------------------
	}
}