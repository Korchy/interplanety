package Vn.Objects {
	// Класс объектов с возможностью заполнения переменных из XML
//-----------------------------------------------------------------------------------------------------
	
//-----------------------------------------------------------------------------------------------------
	public class VnObjectL extends VnObjectU {
//-----------------------------------------------------------------------------------------------------
// Переменные
//-----------------------------------------------------------------------------------------------------
		
//-----------------------------------------------------------------------------------------------------
// Конструктор
//-----------------------------------------------------------------------------------------------------
		public function VnObjectL() {
			super();
		}
//-----------------------------------------------------------------------------------------------------
// Деструктор - вызывать самому, автоматически не вызывается
//-----------------------------------------------------------------------------------------------------
		override public function _delete():void {
			super._delete();
		}
//-----------------------------------------------------------------------------------------------------
// Функции
//-----------------------------------------------------------------------------------------------------
		public function LoadFromXML(Data:XML):void {
			// Заполнение экземпляра класса данными из XML
			for each (var Node:XML in Data.*) {
				if(Node.nodeKind()=="element") {
					if(Node.name() in this) this[Node.name()] = Node;
				}
			}
		}
//-----------------------------------------------------------------------------------------------------
	}
}